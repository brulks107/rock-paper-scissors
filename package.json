{
  "name": "rock-paper-scissors",
  "version": "1.0.1",
  "description": "Amazing game to play mitical rock-paper-scissors with computer",
  "author": "amadridlar",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "app:build": "babel src --out-dir dist",
    "app:serve": "http-server src/",
    "e2e:open": "cypress open",
    "e2e:run": "cypress run",
    "e2e:report": "node test/utils/e2e-report.js",
    "lint": "eslint",
    "postapp:build": "cp -R src/assets src/styles src/index.html dist",
    "preapp:build": "rm -rf dist && mkdir dist",
    "pree2e:run": "node test/utils/rmReports",
    "sonar": "sonar-scanner",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "babel-preset-minify": "^0.5.1",
    "cucumber-html-reporter": "^5.0.2",
    "cypress": "^3.6.1",
    "cypress-cucumber-preprocessor": "^1.16.2",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "http-server": "^0.11.1",
    "multiple-cucumber-html-reporter": "^1.13.1",
    "rimraf": "^3.0.0",
    "sonar-scanner": "^3.1.0",
    "sonarqube-scanner": "^2.5.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "commonPath": "test/e2e/test/common-steps",
    "cucumberJson": {
      "generate": true,
      "outputFolder": "test/reports/cucumber",
      "fileSuffix": ".cucumber"
    }
  }
}
